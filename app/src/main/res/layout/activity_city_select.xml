<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_city_select"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="nickshch.androidweatherapp.CitySelectActivity">

    <Button
        android:text="VICE_CITY"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/button_city_VICE_CITY" />

    <Button
        android:text="RACCOON_CITY"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_city_VICE_CITY"
        android:layout_centerHorizontal="true"
        android:id="@+id/button_city_RACCOON_CITY" />

    <Button
        android:text="SPRINGFIELD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_city_RACCOON_CITY"
        android:layout_centerHorizontal="true"
        android:id="@+id/button_city_SPRINGFIELD" />

    <Button
        android:text="SILENT_HILL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_city_SPRINGFIELD"
        android:layout_centerHorizontal="true"
        android:id="@+id/button_city_SILENT_HILL" />

    <Button
        android:text="SOUTH_PARK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_city_SILENT_HILL"
        android:layout_centerHorizontal="true"
        android:id="@+id/button_city_SOUTH_PARK" />
</RelativeLayout >
